{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "dist"
  },
  "include": [
    "src",
    "auto-imports.d.ts"
  ],
  "exclude": [
    "src/**/*.stories.ts",
    "src/stories",
    "src/**/*.spec.ts",
    "example",
    ".storybook",
    "dist",
    "**/*.config.ts"
  ],
  "tsc-alias": {
    "resolveFullPaths": true
  }
}
